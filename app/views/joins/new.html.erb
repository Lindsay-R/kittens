<h1>Kittens!</h1>

<% if @join.errors.any? %>
  <ul class="errors">
    <% @join.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>
<div>
  <%= image_tag @kitten.image %>
  <%= form_for [@kitten, @join] do |f| %>
    <%= f.collection_select :category_id, Category.order(:name), :id, :name, :prompt => true %>
    <%= f.submit 'Add category' %>
  <% end %>
</div>